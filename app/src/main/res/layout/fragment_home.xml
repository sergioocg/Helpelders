<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio"
    tools:context=".home.principal.HomeFragment">

    <ImageView
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:src="@drawable/degradacion"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_publicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I N I C I O"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Últimas noticias"
        android:layout_marginLeft="15dp"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"/>

    <!-- Slider deslizante con alguna noticia -->
    <LinearLayout
        android:layout_below="@id/cabecera"
        android:id="@+id/linearNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/marco_noticia"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un projecte contra la soledat: alumnes d'ESO fan d'entrenadors personals d'avis"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un projecte contra la soledat: alumnes d'ESO fan d'entrenadors personals d'avis"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textStyle="italic"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/imagen_noticia"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adolescents que fan d'entrenadors personals als avis i àvies del barri de Sant Antoni"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/boton_ir_publicar"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:nb_text="Publicar"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="5dp"
            app:nb_backgroundColor="#3DD682"
            app:nb_textColor="#FFF"
            app:nb_radius="10dp"
            app:nb_textAllCaps="true"
            app:nb_fontIcon="&#xf1d8;"/>

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/boton__ir_buscar"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:nb_text="Buscar"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="5dp"
            app:nb_backgroundColor="#3DD682"
            app:nb_textColor="#FFF"
            app:nb_radius="10dp"
            app:nb_textAllCaps="true"
            app:nb_fontIcon="&#xf267;"/>
    </LinearLayout>


</RelativeLayout>